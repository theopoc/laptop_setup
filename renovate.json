{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "description": "Renovate configuration for laptop_setup - manages npm, Python (uv), Ansible, and GitHub Actions dependencies",
  "extends": [
    "config:recommended"
  ],
  "dependencyDashboardApproval": false,
  "timezone": "Europe/Paris",
  "labels": [
    "dependencies",
    "renovate"
  ],
  "assignees": [
    "TheoPoc"
  ],
  "semanticCommits": "enabled",
  "commitMessagePrefix": "chore(deps):",
  "prConcurrentLimit": 3,
  "branchConcurrentLimit": 5,
  "platformAutomerge": true,
  "ignoreTests": false,
  "packageRules": [
    {
      "description": "Group all npm dependencies updates in a single PR",
      "matchDatasources": [
        "npm"
      ],
      "groupName": "npm dependencies",
      "commitMessageTopic": "npm dependencies"
    },
    {
      "description": "Group Ansible Galaxy collections updates",
      "matchDatasources": [
        "galaxy-collection"
      ],
      "groupName": "Ansible collections",
      "commitMessageTopic": "Ansible collections"
    },
    {
      "description": "Group Ansible Galaxy roles updates",
      "matchDatasources": [
        "galaxy"
      ],
      "groupName": "Ansible roles",
      "commitMessageTopic": "Ansible roles"
    },
    {
      "description": "Group GitHub Actions updates",
      "matchManagers": [
        "github-actions"
      ],
      "groupName": "GitHub Actions",
      "commitMessageTopic": "GitHub Actions",
      "pinDigests": false
    },
    {
      "description": "Group Python dependencies (uv/pyproject.toml) updates",
      "matchManagers": [
        "pep621"
      ],
      "groupName": "Python dependencies",
      "commitMessageTopic": "Python dependencies"
    },
    {
      "description": "Auto-merge minor and patch updates for non-major versions",
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "automergeType": "pr",
      "automergeStrategy": "squash"
    },
    {
      "description": "Require manual approval for major updates",
      "matchUpdateTypes": [
        "major"
      ],
      "automerge": false,
      "labels": [
        "dependencies",
        "renovate",
        "major-update"
      ]
    }
  ],
  "ansible": {
    "enabled": true
  },
  "ansible-galaxy": {
    "enabled": true,
    "managerFilePatterns": [
      "/(^|/)requirements\\.ya?ml$/"
    ]
  },
  "vulnerabilityAlerts": {
    "enabled": true,
    "labels": [
      "security",
      "dependencies"
    ],
    "assignees": [
      "TheoPoc"
    ],
    "automerge": false
  },
  "dependencyDashboard": true,
  "dependencyDashboardTitle": "ðŸ¤– Dependency Updates Dashboard",
  "dependencyDashboardLabels": [
    "dependencies",
    "renovate-dashboard"
  ],
  "lockFileMaintenance": {
    "enabled": true,
    "commitMessageAction": "Update",
    "commitMessageTopic": "lock files",
    "automerge": true,
    "automergeType": "pr",
    "automergeStrategy": "squash"
  }
}
