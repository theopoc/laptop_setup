---
# yamllint configuration for Ansible playbooks
extends: default

rules:
  # Line length - be more lenient for Ansible
  line-length:
    max: 170
    level: warning

  # Indentation - Ansible uses 2 spaces
  indentation:
    spaces: 2
    indent-sequences: true
    check-multi-line-strings: false

  # Comments - require space after #
  comments:
    min-spaces-from-content: 1

  # Comments indentation - disabled for ansible-lint compatibility
  comments-indentation: false

  # Allow duplicate keys in some cases (Ansible handlers)
  key-duplicates:
    forbid-duplicated-merge-keys: true

  # Truthy values - Ansible style
  truthy:
    allowed-values: ["true", "false", "yes", "no"]
    check-keys: false

  # Empty values
  empty-values:
    forbid-in-block-mappings: false
    forbid-in-flow-mappings: true

  # Brackets
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1

  # Braces
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1

  # New lines
  new-line-at-end-of-file: enable
  new-lines:
    type: unix

  # Document start/end
  document-start:
    present: true
  document-end: disable

  # Octal values (important for file permissions)
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true

ignore: |
  .github/
  venv/
  .venv/
  molecule/
  .cache/
